<odoo>
    <!-- Action to open Slow Filters (tree, form) -->
    <record id="action_slow_filter" model="ir.actions.act_window">
        <field name="name">Slow Filters</field>
        <field name="res_model">pa.slow.filter</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'session'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            No slow filters are recorded
            </p>
            <p>
            Run Audit with the slow filters enabled to gather information
            </p>
        </field>
    </record>

    <!-- Single tree view definition with a header that includes the 'Run Audit' button -->
    <record id="view_slow_filter_tree" model="ir.ui.view">
        <field name="name">slow.filter.tree</field>
        <field name="model">pa.slow.filter</field>
        <field name="arch" type="xml">
            <tree string="Slow Filters" default_order="session desc, duration desc">
                <field name="name"/>
                <field name="model_id"/>
                <field name="domain"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>


    <record id="view_slow_filter_form" model="ir.ui.view">
        <field name="name">slow.filter.form</field>
        <field name="model">pa.slow.filter</field>
        <field name="arch" type="xml">
            <form string="Slow Filter Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                        <field name="domain"/>
                        <field name="duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
